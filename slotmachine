import random
def spin_row():
    """
    Simulates a spin of a row in a slot machine.
    Returns a list of 3 random symbols.
    """
    import random
    symbols = ['ğŸ“','ğŸŠ','ğŸ‰','ğŸ”†','ğŸ””']
    return [random.choice(symbols) for _ in range(3)]
def print_row(row):
    """
    Prints a row of symbols.
    """
    print(" | ".join(row)) #join each element in the list 
def getpayout(row1,bet):  
    """
    Calculates the payout based on the row of symbols.
    """
    if row1[0] == row1[1] == row1[2]:
        if row1[0] == 'ğŸ“':
            payout = bet * 10
        elif row1[0] == 'ğŸŠ':
            payout = bet * 5
        elif row1[0] == 'ğŸ‰':
            payout = bet * 3
        elif row1[0] == 'ğŸ”†':
            payout = bet * 2
        elif row1[0] == 'ğŸ””':
            payout = bet * 1
        else:
            payout = 0
    else:
        payout = 0
    return payout
  
def main():
    balance = 100
    print("="*40)
    print("ğŸ° Welcome to the Slot Machine!")
    print("ğŸ¯ Symbols: ğŸ“ ğŸŠ ğŸ‰ ğŸ”† ğŸ””")
    print("ğŸ’° You start with $100")
    print("="*40)

    while True:
        print(f"\nğŸ’µ Current Balance: ${balance}")
        bet_input = input("Enter your bet amount (or 0 to exit): $")

        # Check if input is numeric
        if not bet_input.isdigit():
            print("âŒ Invalid input. Please enter a positive number.")
            continue

        bet = int(bet_input)

        if bet == 0:
            print("ğŸ‘‹ Thanks for playing! Final balance: $", balance)
            break
        elif bet < 0:
            print("âŒ Bet cannot be negative.")
            continue
        elif bet > balance:
            print("âŒ You can't bet more than your current balance.")
            continue

        balance -= bet
        print("\nğŸ² Spinning the reels...")
        row1 = spin_row()
        print_row(row1)

        payout = getpayout(row1, bet)
        if payout > 0:
            print(f"ğŸ‰ You won ${payout}!")
            balance += payout
        else:
            print("ğŸ˜¢ No match. You lost your bet.")

        if balance <= 0:
            print("\nğŸ’¸ You're out of money! Game over.")
            break

        print("-" * 40)
    print("ğŸ° Thanks for playing! Your final balance is $", balance )
if __name__ == '__main__':
  main()
